<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="colorControlActivated">?colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>

        <item name="android:textViewStyle">@style/Widget.MusicManager.TextView</item>
        <item name="snackbarStyle">@style/TextAppearance.MusicManager.Snackbar</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white_transparent</item>

        <item name="android:navigationBarColor">@color/indigo_transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:textColorTertiary">@color/text_color_tertiary</item>
    </style>


    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:stateListAnimator">@animator/toolbar_elevation_animator</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.MusicManager.ToolbarTitle</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="TextAppearance.MusicManager.ToolbarTitle"
           parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="TextAppearance.MusicManager.ExpandedToolbarTitle"
           parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="Widget.MusicManager.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MusicManager.Body</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="TextAppearance.MusicManager.AlbumTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MusicManager.SubheadCaps" parent="@style/TextAppearance.MusicManager.Body">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.MusicManager.SecondaryHeader" parent="@style/TextAppearance.MusicManager.Body">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.MusicManager.ListSecondary" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>


    <style name="TextAppearance.MusicManager.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.MusicManager.TrackNumber" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.MusicManager.EmptyText" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.MusicManager" parent="@android:style/Widget"/>


    <style name="TextAppearance.MusicManager.SessionTitle.Display" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="TextAppearance.MusicManager.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/bg_snackbar</item>
    </style>

    <style name="Widget.MusicManager.ArtistHeaders">
        <item name="android:width">@dimen/artist_header_width</item>
        <item name="android:paddingTop">@dimen/artist_header_padding_top</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="artistTextSize">@dimen/artist_header_text_size</item>
    </style>


</resources>
